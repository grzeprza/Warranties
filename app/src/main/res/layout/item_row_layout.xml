<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/itemName"
        android:text="T-Shirt z Księżycem"
        android:textAlignment="viewStart"
        android:layout_alignTop="@id/ic_item"
        android:layout_toEndOf="@id/ic_item"
        />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carry"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="viewStart"
        android:layout_alignBottom="@id/ic_item"
        android:layout_alignStart="@id/item_description"
        android:layout_alignEnd="@id/item_description"
        />

    <TextView
        android:id="@+id/number_timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/warrantyTimeLeft"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_above="@id/shop_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/measure_timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rok"
        android:textAlignment="center"
        android:layout_alignEnd="@id/number_timeLeft"
        android:layout_alignBottom="@id/shop_name"
        android:layout_alignStart="@id/number_timeLeft"
        />

</RelativeLayout>